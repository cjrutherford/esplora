    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "env": {
                "API_URL": "https://localhost:18242",
                "BASE_HREF": "/signet/nojs/",
                "STATIC_ROOT": "/signet/"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/prerender-server/src/server.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}